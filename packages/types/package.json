{
	"name": "loop-types",
	"version": "0.1.0",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"description": "\"Loop/Mattermost TypeScript types\"",
	"engines": {
		"node": ">=20",
		"pnpm": ">=10"
	},
	"scripts": {
		"test": "exit 0",
		"build": "rimraf ./build && tsc -p tsconfig.json",
		"format": "biome format --write",
		"check": "biome check --write",
		"gen:zod": "./scripts/gen-zod-schemas.sh",
		"lint": "biome lint ./src",
		"prepublishOnly": "bun run check && bun run lint-staged --allow-empty && bun run rimraf ./build && bun run tsc -p tsconfig.json",
		"test:real": "jest --testPathIgnorePatterns=null",
		"test:real:only": "jest --testPathIgnorePatterns=null --testMatch=\"**/test/real-api/*.test.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/loop-types.git"
	},
	"author": "triple-sun",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/triple-sun/loop-types/issues"
	},
	"homepage": "https://github.com/triple-sun/loop-types#readme",
	"files": [
		"build/**/*",
		"*.md"
	],
	"devDependencies": {
		"@biomejs/biome": "catalog:dev",
		"@tsconfig/recommended": "catalog:dev",
		"@types/node": "catalog:dev",
		"lint-staged": "catalog:dev",
		"rimraf": "catalog:dev",
		"typescript": "catalog:dev"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		],
		"test/integration/real-api/schemas/*": []
	}
}
