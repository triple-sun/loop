{
	"name": "@triple-sun/hoop",
	"version": "0.1.0",
	"description": "Пакет SDK для Loop/Mattermost",
	"author": "Semen Kononets <sploit.strannik@gmail.com>",
	"license": "MIT",
	"main": "build/index.js",
	"files": [
		"build/**/*",
		"*.md"
	],
	"scripts": {
		"test": "jest --passWithNoTests",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"test:ci": "jest --ci --coverage --maxWorkers=2",
		"build": "rimraf ./build && tsc -p tsconfig.json",
		"format": "biome format ./ --write",
		"check": "biome check ./ --write",
		"lint": "biome lint ./src",
		"prepublishOnly": "pnpm run check && lint-staged --allow-empty && pnpm run build && pnpm run test"
	},
	"homepage": "https://github.com/triple-sun/loop/packages/hoop#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/loop.git"
	},
	"keywords": [
		"loop",
		"mattermost"
	],
	"publishConfig": {
		"access": "public"
	},
	"bugs": {
		"url": "https://github.com/triple-sun/loop/issues"
	},
	"dependencies": {
		"remove-markdown": "^0.6.3",
		"loop-types": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:dev",
		"@jest/globals": "catalog:test",
		"@tsconfig/recommended": "^1",
		"@types/jest": "catalog:test",
		"@types/node": "catalog:dev",
		"dotenv": "catalog:test",
		"jest": "catalog:test",
		"lint-staged": "catalog:dev",
		"rimraf": "catalog:dev",
		"ts-jest": "catalog:test",
		"ts-node": "catalog:test",
		"ts-to-zod": "^5.1.0",
		"tsd": "catalog:test",
		"type-fest": "^5.4.4",
		"typescript": "catalog:dev"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
