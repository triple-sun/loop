{
	"name": "loop-client",
	"version": "0.1.0",
	"main": "build/src/index.js",
	"types": "build/src/index.d.ts",
	"description": "\"Loop/Mattermost TypeScript client\"",
	"engines": {
		"node": ">=20",
		"pnpm": ">=10"
	},
	"scripts": {
		"test": "jest",
		"build": "rimraf ./build && tsc",
		"format": "biome format --write",
		"check": "biome check --write",
		"gen:zod": "./scripts/gen-zod-schemas.sh",
		"lint": "biome lint ./src",
		"prepublishOnly": "pnpm run check && lint-staged --allow-empty && jest && rimraf ./build && tsc -p tsconfig.json",
		"test:real": "jest --testPathIgnorePatterns=null",
		"test:real:only": "jest --testPathIgnorePatterns=null --testMatch=\"**/test/real-api/*.test.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/loop.git"
	},
	"author": "triple-sun",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/triple-sun/loop/issues"
	},
	"homepage": "https://github.com/triple-sun/loop#readme",
	"files": [
		"build/**/*",
		"*.md"
	],
	"dependencies": {
		"@triple-sun/logger": "^0.0.1",
		"again-ts": "^1.0.5",
		"axios": "^1.13.3",
		"breadline-ts": "^1.1.0",
		"eventemitter3": "^5.0.4",
		"form-data": "^4.0.5",
		"is-stream": "^4.0.1",
		"loop-types": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:dev",
		"@jest/globals": "catalog:test",
		"@tsconfig/recommended": "^1",
		"@types/jest": "catalog:test",
		"@types/nock": "catalog:test",
		"@types/node": "catalog:dev",
		"dotenv": "catalog:test",
		"jest": "catalog:test",
		"lint-staged": "catalog:dev",
		"nock": "catalog:test",
		"rimraf": "catalog:dev",
		"ts-jest": "catalog:test",
		"ts-node": "catalog:test",
		"ts-to-zod": "^5.1.0",
		"tsd": "catalog:test",
		"typescript": "catalog:dev",
		"zod": "^4.3.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		],
		"test/integration/real-api/schemas/*": []
	}
}
